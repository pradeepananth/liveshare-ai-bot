{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Meeting Prep Notes",
                    "size": "Large",
                    "weight": "Bolder"
                }
            ]
        },
        {
            "type": "Input.Text",
            "id": "prepnoteinput",
            "value": "${prepnotes}",
            "maxLength": 600,
            "isMultiline": true
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Save",
            "data": {
                "verb": "save"
              }
        }
    ],
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "msteams": {
        "width": "Full"
    }
}