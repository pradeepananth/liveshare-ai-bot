{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "On Call notes",
                    "size": "Large",
                    "weight": "Bolder"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Please find the latest on call notes recorded. Please add or update the notes as required and hit Confirm to save the changes."
          },
          {
            "type": "Input.Text",
            "id": "multilineInputId",
            "value": "${oncallnotes}",
            "maxLength": 600,
            "isMultiline": true
          }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Confirm",
            "data": {
                "verb": "confirm"
              }
        },
        {
            "type": "Action.Submit",
            "title": "Summarize with AI",
            "data": {
                "verb": "AICard"
              }
        }
    ],
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "msteams": {
        "width": "Full"
    }
}